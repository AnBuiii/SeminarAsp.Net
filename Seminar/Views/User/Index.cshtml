@{
    ViewData["Title"] = "Welcome";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">User List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="User" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
    <br/><br/>
    <table>
        <thead>
        <tr>
            <th>
                #ID
            </th>
            <th>
                Username
            </th>
            <th>
                Password
            </th>
            <th>
                HMM
            </th>
        </tr>
        </thead>
    
    
        <tbody>
        @foreach (User  obj   in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Id
                </td>
                <td width="30%">
                    @obj.username
                </td>
                <td width="25%">
                    @obj.password
                </td>
                <td width="35%">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="User" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
